{
  "name": "AutoPause",
  "version": "1.1",
  "description": "Pause other audio and video sources if audio is playing on active tab with automatic resume",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "ContentScript.js"
      ]
    }
  ],
  "commands": {
    "gotoaudible": {
        "suggested_key": {
            "default": "Ctrl+Shift+K",
            "mac": "Command+Shift+K"
        },
        "description": "Go to tab with audio"
	}
  },
  "permissions": [
    "tabs"
  ],
  "background": {
    "scripts":["background.js"]
  },
  "manifest_version": 2
}

{
  "name": "AutoPause",
  "version": "1.0",
  "description": "Pause other audio and video sources if audio is playing on active tab with automatic resume",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "ContentScript.js"
      ]
    }
  ],
  "permissions": [
    "tabs"
  ],
  "background": {
    "scripts":["background.js"]
  },
  "manifest_version": 2
}
